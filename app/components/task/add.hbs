<div class="input-group mb-4">
  <Input 
    id="add-task-input"
    type="text" 
    class="form-control" 
    placeholder="Nueva tarea" 
    aria-label="Nueva tarea" 
    aria-describedby="add-task-btn"
    @value={{this.newTaskDesc}}
    @enter={{this.onEnter}}
    autocomplete="off"
  />
  <button 
    id="add-task-btn"
    class="btn btn-outline-dark btn-sm" 
    type="button" 
    disabled={{this.disableAddBtn}}
    {{on 'click' this.onAddTask }}
  >
    Agregar
  </button>
</div>