{{page-title "Registrarse"}}
<div class="container-fluid d-flex align-items-center py-4 bg-body-tertiary">
  <main class="login-form w-100 m-auto">
    <form>
      <div class="d-flex justify-content-center align-items-center">
      <img class="mb-4" src="/assets/todo-list-icon.svg" alt="" width="72" >
      </div>
      <h1 class="h3 mb-3 text-center fw-normal">Registrarse</h1>

      <div class="app-form-fields mb-3">
        <div class="form-floating">
          <input id="name" type="text" class="form-control" placeholder="John Doe">
          <label for="name">Nombre</label>
        </div>
        <div class="form-floating">
          <input id="email" type="email" class="form-control" placeholder="name@example.com">
          <label for="email">Correo electrónico</label>
        </div>
        <div class="form-floating">
          <input id="password" type="password" class="form-control" placeholder="Password" autocomplete="false">
          <label for="password">Contraseña</label>
        </div>
        <div class="form-floating">
          <input id="new-password" type="password" class="form-control" placeholder="Password" autocomplete="false">
          <label for="new-password">Confirmar contraseña</label>
        </div>
      </div>
      
      <button class="btn btn-dark w-100 py-2" type="submit">Registrar cuenta</button>

      <hr class="mt-4 mb-3 border-secondary-subtle">

      <div class="d-flex justify-content-end">
        <LinkTo class="link-secondary text-decoration-none" @route='login'>
          Ya tengo una cuenta
        </LinkTo>
      </div>

      <p class="mt-5 mb-3 text-body-secondary text-center" style="opacity: .5;">© Copyright 2024 - Grupo 1</p>
    </form>
  </main>
</div>